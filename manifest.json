{
  "manifest_version": 3,
  "name": "瞬捕·Chrono",
  "version": "1.0",
  "description": "A Chrome extension for fetching images",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    //    "default_popup": "popup.html",
    "default_title": "打开侧边栏",
    "default_icon": "icons/icon.png"
  },
  "side_panel": {
    "default_path": "side.html"
  },
  "background": {
    "service_worker": "bg.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "cs.js"
      ],
      "css": [
        "css/common.css"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "downloads",
    "webRequest",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}